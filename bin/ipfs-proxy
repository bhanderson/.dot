#!/usr/bin/env bash
PORT=9876

# ipfs-proxy --api /ip4/127.0.0.1/tcp/9876 add proxy
# tail -f in
# tail -f out
FL_OUT="/tmp/out"
FL_IN="/tmp/in"
FL_PIPE="/tmp/pipe"

function setup {
  cat /dev/null > $FL_IN
  cat /dev/null > $FL_OUT

  if [ ! -e $FL_PIPE ]; then
    mkfifo $FL_PIPE
  fi
}

function run {
  while [ 1 ]; do
    nc -l -p $PORT < $FL_PIPE \
      | tee -a $FL_IN         \
      | nc localhost 5001     \
      | tee -a $FL_OUT        \
      > $FL_PIPE
  done
}

function tail_in {
  tail -f $FL_IN | go-http-format
}

function tail_out {
  tail -f $FL_OUT | go-http-format
}

case "$1" in
"proxy")
    setup
    run
    ;;
"proxy-in")
    tail_in
    ;;
"proxy-out")
    tail_out
    ;;
*)
    # Execute things against the proxy
    ipfs --api /ip4/127.0.0.1/tcp/$PORT $@
    ;;
esac

